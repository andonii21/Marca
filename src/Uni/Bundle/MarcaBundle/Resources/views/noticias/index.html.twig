{% extends 'uniMarcaBundle::layout.html.twig' %}

{% block central -%}
    
        
        <tbody>
        {% for entity in entities %}
              
        <h3><a href="{{ path('noticias_show' , { 'id': entity.id }) }}">{{ entity.titulo }}</a></h3>
        <h5>{% if entity.fechaPub %}{{ entity.fechaPub|date('Y-m-d H:i:s') }}{% endif %}</h5>
        <h5>{{ entity.autor }}</h5><br>
        <h5>{{ entity.categoria }}</h5><br>
           
        <img src="{{ asset('bundles/unimarca/imagenes/'~ entity.foto  ~ '') }}" width=20% height=20%/><br>
                

            
        {% endfor %}
       <ul>
        <li>
            <a href="{{ path('noticias_buscar_titulo_like') }}">
                Buscar por titulo
            </a>
        </li>
    </ul>
                
                     
        <ul>
        <li>
            <a href="{{ path('noticias_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
